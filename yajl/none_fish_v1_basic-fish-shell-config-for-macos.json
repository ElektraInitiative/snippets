[
    "# set language to en_US with UTF-8",
    "set -x LC_ALL en_US.UTF-8",
    "",
    "# remove greeting",
    "set fish_greeting \"\"",
    "",
    "# set default editor to vim",
    "# NOTE: change to your favorite editor",
    "set -g -x EDITOR \"vim\"",
    "",
    "# add ssh keys to macOS keychain",
    "ssh-add -A 2>/dev/null",
    "",
    "# enable gnupg support for git",
    "# https://www.libelektra.org/entries/details/none~2Ffish~2Fv1~2Fgpg-agent-with-fish-shell",
    "# NOTE: uncomment to enable",
    "# . ~/.config/fish/gnupg.fish",
    "",
    "# aliases",
    "# NOTE: uncomment to enable",
    "# . ~/.config/fish/aliases.fish",
    "",
    "# abbreviations",
    "# NOTE: uncomment to enable",
    "# . ~/.config/fish/abbr.fish",
    "",
    "# iTerm2 shell integration",
    "test -e {$HOME}/.iterm2_shell_integration.fish ; and source {$HOME}/.iterm2_shell_integration.fish"
]
