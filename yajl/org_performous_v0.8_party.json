[
    "<?xml version=\"1.0\"?>",
    "<performous>",
    "\t<!-- Menu definitions.",
    "\tAll config entries with the same prefix as the menu entry are displayed in the menu,",
    "\texcept if they have attribute hidden=\"true\". The options display in the same order",
    "\tas they are specified here.",
    "\t-->",
    "\t<menu>",
    "\t\t<entry name=\"game\">",
    "\t\t\t<locale name=\"C\">",
    "\t\t\t\t<short>Game</short>",
    "\t\t\t\t<long>Gameplay settings.</long>",
    "\t\t\t</locale>",
    "\t\t</entry>",
    "\t\t<entry name=\"graphic\">",
    "\t\t\t<locale name=\"C\">",
    "\t\t\t\t<short>Graphic</short>",
    "\t\t\t\t<long>Video and rendering settings.</long>",
    "\t\t\t</locale>",
    "\t\t</entry>",
    "\t\t<entry name=\"audio\">",
    "\t\t\t<locale name=\"C\">",
    "\t\t\t\t<short>Audio</short>",
    "\t\t\t\t<long>Audio-related settings.</long>",
    "\t\t\t</locale>",
    "\t\t</entry>",
    "\t\t<entry name=\"system\">",
    "\t\t\t<locale name=\"C\">",
    "\t\t\t\t<short>System</short>",
    "\t\t\t\t<long>System paths.</long>",
    "\t\t\t</locale>",
    "\t\t</entry>",
    "\t</menu>",
    "\t<!-- Gameplay preferences -->",
    "\t<entry name=\"game/keyboard_guitar\" type=\"bool\" value=\"false\">",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Keyboard Guitar</short>",
    "\t\t\t<long>Play with the keyboard</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"game/karaoke_mode\" type=\"bool\" value=\"false\">",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Karaoke mode</short>",
    "\t\t\t<long>Hide pitch wave, notes and scoring</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"game/song_hiscore\" type=\"bool\" value=\"true\">",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Song Hiscore</short>",
    "\t\t\t<long>Show and save a per song hiscore.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"game/pitch\" type=\"bool\" value=\"true\">",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Pitch waves</short>",
    "\t\t\t<long>Enable singing pitch display (when not in karaoke mode)</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<!--",
    "\t<entry name=\"game/theme\" type=\"string\">",
    "\t\t<stringvalue>default</stringvalue>",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Theme</short>",
    "\t\t\t<long>Name of the theme to use or absolute path to theme folder</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t-->",
    "\t<entry name=\"game/keyboard_guitar\" type=\"bool\" value=\"false\">",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Keyboard as guitar</short>",
    "\t\t\t<long>Enable keyboard as guitar (Frets on Frire mode)</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t\t<!-- Should be SDL_ID:{GUITAR_GUITARHERO|GUITAR_ROCKBAND|DRUMS_GUITARHERO|DRUMS_ROCKBAND}",
    "\t<entry name=\"game/instruments\" type=\"string_list\">",
    "\t\t     example:",
    "\t\t\t<stringvalue>0:GUITAR_GH</stringvalue>",
    "\t\t<locale name=\"C\">",
    "\t\t\t<stringvalue>0:GUITAR_GH</stringvalue>",
    "\t\t\t<short>Joystick configuration</short>",
    "\t\t\t<long>Force joystick to some kind of instrument.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t\t-->",
    "\t\t<!-- Should be SDL_ID:{GUITAR_GUITARHERO|GUITAR_ROCKBAND|DRUMS_GUITARHERO|DRUMS_ROCKBAND}",
    "\t<entry name=\"game/instruments\" type=\"string_list\">",
    "\t\t     example:",
    "\t\t\t<stringvalue>0:GUITAR_GH</stringvalue>",
    "\t\t\t<stringvalue>0:GUITAR_GH</stringvalue>",
    "\t\t\t<stringvalue>0:DANCEPAD_GENERIC</stringvalue>",
    "\t\t\t<stringvalue>1:DANCEPAD_GENERIC</stringvalue>",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Joystick configuration</short>",
    "\t\t\t<long>Force joystick to some kind of instrument.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t\t-->",
    "",
    "",
    "\t<!-- Graphic preferences -->",
    "\t<entry name=\"graphic/window_width\" type=\"int\" value=\"1280\" hidden=\"false\">",
    "\t\t<ui unit=\" pixels\" />",
    "\t\t<limits min=\"320\" max=\"1280\" step=\"16\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Windowed width</short>",
    "\t\t\t<long></long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"graphic/window_height\" type=\"int\" value=\"688\" hidden=\"false\">",
    "\t\t<ui unit=\" pixels\" />",
    "\t\t<limits min=\"240\" max=\"720\" step=\"16\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Windowed height</short>",
    "\t\t\t<long></long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"graphic/fullscreen\" type=\"bool\" value=\"false\">",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Fullscreen mode</short>",
    "\t\t\t<long></long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"graphic/video\" type=\"bool\" value=\"true\">",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Video playback</short>",
    "\t\t\t<long>Allows completely disabling background videos. It is recommended to leave this enabled as Performous will still smoothly fade out the video if your computer is not fast enough.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"graphic/svg_lod\" type=\"float\" value=\"1.0\">",
    "\t\t<ui unit=\"x\" />",
    "\t\t<limits min=\"0.5\" max=\"3.0\" step=\"0.1\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>SVG quality</short>",
    "\t\t\t<long>Larger numbers cause vector graphics to be rendered in higher resolution. Decrease this to make navigating in menus faster.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"graphic/text_lod\" type=\"float\" value=\"1.0\">",
    "\t\t<ui unit=\"x\" />",
    "\t\t<limits min=\"0.5\" max=\"3.0\" step=\"0.1\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Text quality</short>",
    "\t\t\t<long>Larger numbers cause text to be rendered in higher resolution. Decrease this to make everything a little faster.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"graphic/fps\" type=\"bool\" value=\"false\">",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Benchmark mode</short>",
    "\t\t\t<long>Framerate limit of 100 FPS is removed and the game instead renders at full speed. FPS values are printed to console. Please note that the display drivers may still limit the rendering speed to the screen refresh rate.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "",
    "\t<!-- Audio preferences -->",
    "\t<entry name=\"audio/video_delay\" type=\"float\" value=\"0.00\">",
    "\t\t<ui unit=\" ms\" multiplier=\"1000\" />",
    "\t\t<limits min=\"-0.5\" max=\"0.5\" step=\"0.02\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Audio/video latency</short>",
    "\t\t\t<long>Use negative value if your display input lag is greater than the sound card output latency, positive values in the opposite case and zero if they are equal. F5/F6 to adjust this in singing screen.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"audio/controller_delay\" type=\"float\" value=\"0.00\">",
    "\t\t<ui unit=\" ms\" multiplier=\"1000\" />",
    "\t\t<limits min=\"-0.5\" max=\"0.5\" step=\"0.02\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Audio/controller latency</short>",
    "\t\t\t<long>Use negative value if your controller lag is greater than the sound card output latency, positive values in the opposite case and zero if they are equal.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"audio/round-trip\" type=\"float\" value=\"0.08\">",
    "\t\t<ui unit=\" ms\" multiplier=\"1000\" />",
    "\t\t<limits min=\"0.0\" max=\"0.5\" step=\"0.02\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Audio round-trip latency</short>",
    "\t\t\t<long>The time it takes for Performous playback to reach your speakers, fly to the microphone and all the way back until Performous captures and analyzes it. Use F4 debug mode in singing screen and adjust with F7/F8.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"audio/capture\" type=\"string_list\">",
    "\t\t<stringvalue>channels=2@alsa:hw:2</stringvalue>",
    "\t\t<stringvalue>channels=1@alsa:hw:1</stringvalue>",
    "\t\t<!--",
    "\t\t<stringvalue>channels=1@alsa:hw:0</stringvalue>",
    "\t\t<stringvalue>channels=2@alsa:hw:2</stringvalue>",
    "\t\t-->",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Microphones</short>",
    "\t\t\t<long>List of capture devices to use. Any failing devices will be ignored.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"audio/playback\" type=\"string_list\">",
    "\t\t<stringvalue>alsa</stringvalue>",
    "\t\t<!--",
    "\t\t<stringvalue>alsa:hw:0</stringvalue>",
    "\t\t<stringvalue></stringvalue>",
    "\t\t<stringvalue>channels=2,rate=44100,frames=256@alsa</stringvalue>",
    "\t\t-->",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Playback devices</short>",
    "\t\t\t<long>List of playback devices to try. The first working one will be used.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"audio/preview_volume\" type=\"int\" value=\"70\">",
    "\t\t<ui unit=\" %\" />",
    "\t\t<limits min=\"0\" max=\"100\" step=\"5\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Menu volume</short>",
    "\t\t\t<long>The volume level of menus, song previews and jukebox mode.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"audio/music_volume\" type=\"int\" value=\"100\">",
    "\t\t<ui unit=\" %\" />",
    "\t\t<limits min=\"0\" max=\"100\" step=\"5\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Music volume</short>",
    "\t\t\t<long>The ingame music volume. Values above 90 are not recommended as distortion may occur.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"audio/fail_volume\" type=\"int\" value=\"90\">",
    "\t\t<ui unit=\" %\" />",
    "\t\t<limits min=\"0\" max=\"100\" step=\"5\" />",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Failure volume</short>",
    "\t\t\t<long>The ingame fail sound volume. Values above 90 are not recommended as distortion may occur. 11 is louder than 10, but these go to 100. 89 louder!</long>",
    "\t\t</locale>",
    "\t</entry>",
    "",
    "\t<!-- System preferences -->",
    "\t<entry name=\"system/path_data\" type=\"string_list\">",
    "\t\t<stringvalue>/usr/local/share/games/performous/</stringvalue>",
    "\t\t<stringvalue>/usr/share/games/performous/</stringvalue>",
    "\t\t<stringvalue>../</stringvalue><!-- For Windows where the program is started in bin/ -->",
    "\t\t<stringvalue>~/.performous/</stringvalue>",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Data folders</short>",
    "\t\t\t<long>Where Performous data are stored.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"system/path_songs\" type=\"string_list\">",
    "\t\t<stringvalue>~/.songs/</stringvalue>",
    "\t\t<stringvalue>/usr/share/songs/</stringvalue>",
    "\t\t<!--",
    "\t\t<stringvalue>/usr/share/songs/songs/</stringvalue>",
    "\t\t<stringvalue>~/.ultrastar/songs/</stringvalue>",
    "\t\t<stringvalue>/usr/share/games/fretsonfire/data/songs/</stringvalue>",
    "\t\t<stringvalue>/usr/share/games/fretsonfire/data/songs/sectoid/</stringvalue>",
    "\t\t<stringvalue>/usr/local/share/games/ultrastar/songs/</stringvalue>",
    "\t\t<stringvalue>/usr/share/games/ultrastar/songs/</stringvalue>",
    "\t\t<stringvalue>../songs/</stringvalue>",
    "\t\t<stringvalue>/media/performous/songs/</stringvalue>",
    "\t\t-->",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Song folders</short>",
    "\t\t\t<long>Where to recursively look for songs.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"system/path_share\" type=\"string_list\">",
    "\t\t<stringvalue>~/.local/share</stringvalue>",
    "\t\t<stringvalue>../share</stringvalue><!-- For Windows where the program is started in bin/ -->",
    "\t\t<stringvalue>~/.performous/share</stringvalue>",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Data folders</short>",
    "\t\t\t<long>Where Performous data are stored.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "\t<entry name=\"system/path_pictures\" type=\"string_list\">",
    "\t\t<stringvalue>/usr/local/share/games/performous/pictures</stringvalue>",
    "\t\t<stringvalue>/usr/share/games/performous/pictures</stringvalue>",
    "\t\t<stringvalue>../pictures/</stringvalue><!-- For Windows where the program is started in bin/ -->",
    "\t\t<stringvalue>~/.performous/pictures/</stringvalue>",
    "\t\t<locale name=\"C\">",
    "\t\t\t<short>Picture folders</short>",
    "\t\t\t<long>Where to look for pictures of players.</long>",
    "\t\t</locale>",
    "\t</entry>",
    "</performous>"
]
